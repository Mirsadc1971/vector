---
export interface Props {
  title: string;
  description: string;
  canonical?: string;
  schema?: any;
}

const { title, description, canonical, schema } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title} | Vector Building Services</title>
    <meta name="description" content={description} />
    {canonical && <link rel="canonical" href={canonical} />}

    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url.href} />

    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet" />

    {schema && (
      <script type="application/ld+json" set:html={JSON.stringify(schema)} />
    )}
  </head>
  <body class="min-h-screen bg-white">
    <header class="sticky top-0 z-50 bg-white border-b border-gray-200">
      <nav class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <a href="/" class="text-2xl font-bold text-primary-700">
            Vector Building Services
          </a>

          <div class="hidden md:flex items-center space-x-8">
            <a href="/services/" class="text-gray-700 hover:text-primary-600 font-medium">Services</a>

            <div class="relative group">
              <span class="text-gray-700 hover:text-primary-600 font-medium cursor-pointer">Locations</span>
              <div class="absolute left-0 mt-2 w-48 bg-white border border-gray-200 rounded-lg shadow-lg opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
                <a href="/locations/chicago/" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Chicago</a>
                <a href="/locations/suburbs/" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">Suburbs</a>
              </div>
            </div>

            <a href="/about/" class="text-gray-700 hover:text-primary-600 font-medium">About</a>
            <a href="/contact/" class="text-gray-700 hover:text-primary-600 font-medium">Contact</a>
            <a href="tel:3125225355" class="bg-primary-600 text-white px-4 py-2 rounded-lg hover:bg-primary-700 font-medium">
              (312) 522-5355
            </a>
          </div>

          <button class="md:hidden" id="mobile-menu-button">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
            </svg>
          </button>
        </div>
      </nav>
    </header>

    <main>
      <slot />
    </main>

    <footer class="bg-gray-900 text-white py-12 mt-20">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
          <div>
            <h3 class="text-xl font-bold mb-4">Vector Building Services</h3>
            <p class="text-gray-400">Professional building maintenance and janitorial services for Chicago and suburbs.</p>
          </div>

          <div>
            <h4 class="font-semibold mb-3">Services</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/services/" class="hover:text-white">All Services</a></li>
              <li><a href="/services/maintenance/" class="hover:text-white">Maintenance Services</a></li>
              <li><a href="/services/interior/office-build-outs/" class="hover:text-white">Office Build-Outs</a></li>
              <li><a href="/contact/" class="hover:text-white">Emergency Services</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-3">Service Areas</h4>
            <ul class="space-y-2 text-gray-400">
              <li><a href="/locations/chicago/" class="hover:text-white">Chicago</a></li>
              <li><a href="/locations/suburbs/" class="hover:text-white">Suburbs</a></li>
              <li><a href="/locations/suburbs/glenview/" class="hover:text-white">Glenview</a></li>
              <li><a href="/locations/suburbs/evanston/" class="hover:text-white">Evanston</a></li>
            </ul>
          </div>

          <div>
            <h4 class="font-semibold mb-3">Contact</h4>
            <address class="text-gray-400 not-italic">
              1400 Patriot Boulevard 2042<br>
              Glenview, IL 60026<br>
              <a href="tel:3125225355" class="hover:text-white">(312) 522-5355</a><br>
              <a href="mailto:service@vectorbuildingservices.com" class="hover:text-white">service@vectorbuildingservices.com</a>
            </address>
          </div>
        </div>

        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025 Vector Building Services Inc. All rights reserved.</p>
        </div>
      </div>
    </footer>

    <script>
      document.getElementById('mobile-menu-button')?.addEventListener('click', () => {
        // Mobile menu implementation
      });
    </script>
  </body>
</html>