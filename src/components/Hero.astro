---
export interface Props {
  title: string;
  subtitle?: string;
  image?: string;
  overlay?: boolean;
  breadcrumbs?: Array<{ name: string; href?: string }>;
}

const { title, subtitle, image, overlay = true, breadcrumbs } = Astro.props;

// Default image if none provided
const heroImage = image || '/images/chicago-skyline.jpg';
---

<section class="relative h-[400px] md:h-[500px] flex items-center">
  <!-- Background Image -->
  <div
    class="absolute inset-0 bg-cover bg-center bg-no-repeat"
    style={`background-image: url('${heroImage}');`}
  >
    {overlay && (
      <div class="absolute inset-0 bg-gradient-to-r from-black/70 to-black/50"></div>
    )}
  </div>

  <!-- Content -->
  <div class="relative container mx-auto px-4 text-white z-10">
    {breadcrumbs && breadcrumbs.length > 0 && (
      <nav class="text-sm mb-4">
        {breadcrumbs.map((item, index) => (
          <>
            {item.href ? (
              <a href={item.href} class="hover:underline text-gray-300">{item.name}</a>
            ) : (
              <span class="text-gray-400">{item.name}</span>
            )}
            {index < breadcrumbs.length - 1 && (
              <span class="mx-2 text-gray-400">/</span>
            )}
          </>
        ))}
      </nav>
    )}

    <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-4 max-w-4xl">
      {title}
    </h1>

    {subtitle && (
      <p class="text-xl md:text-2xl text-gray-200 max-w-3xl">
        {subtitle}
      </p>
    )}
  </div>
</section>