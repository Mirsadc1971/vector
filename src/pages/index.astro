---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const schema = {
  "@context": "https://schema.org",
  "@type": "LocalBusiness",
  "name": "Vector Building Services",
  "description": "Professional building services for condominium associations in Chicago and suburbs. Interior and exterior maintenance.",
  "url": "https://vectorbuildingservices.com",
  "telephone": "+13125225355",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "1400 Patriot Boulevard #2042",
    "addressLocality": "Glenview",
    "addressRegion": "IL",
    "postalCode": "60026",
    "addressCountry": "US"
  },
  "geo": {
    "@type": "GeoCoordinates",
    "latitude": 42.0697,
    "longitude": -87.7878
  },
  "areaServed": [
    "Chicago",
    "Glenview",
    "Northbrook",
    "Skokie",
    "Evanston",
    "Naperville",
    "Schaumburg",
    "Oak Brook"
  ]
};
