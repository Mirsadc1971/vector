<BaseLayout
  title="Condominium Association Building Services Chicago"
  description="Vector Building Services provides professional interior and exterior services for condominium associations throughout Chicago and suburbs. Call (312) 522-5355."
  schema={schema}
>
  <!-- Hero Section with Video Background -->
  <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
    <!-- Background Image with Overlay -->
    <div class="absolute inset-0 z-0">
      <div class="absolute inset-0 bg-gradient-to-br from-primary-900/90 via-primary-800/85 to-primary-600/90 z-10"></div>
      <div class="absolute inset-0 bg-[url('data:image/svg+xml;base64,')] opacity-20"></div>
    </div>

    <!-- Animated particles -->
    <div class="absolute inset-0 z-5">
      <div class="absolute top-20 left-10 w-72 h-72 bg-white/5 rounded-full blur-3xl animate-float"></div>
      <div class="absolute bottom-20 right-10 w-96 h-96 bg-primary-300/10 rounded-full blur-3xl animate-float" style="animation-delay: 2s"></div>
    </div>

    <div class="container mx-auto px-4 relative z-20">
      <div class="max-w-4xl mx-auto text-center">
