          <a href="/medical-facility-cleaning-glenview/" class="text-primary-600 hover:underline">
            Medical Facility Cleaning
          </a>
          <a href="/retail-store-janitorial-northbrook/" class="text-primary-600 hover:underline">
            Retail Store Cleaning
          </a>
          <a href="/restaurant-cleaning-services-naperville/" class="text-primary-600 hover:underline">
            Restaurant Cleaning
          </a>
          <a href="/warehouse-floor-care-schaumburg/" class="text-primary-600 hover:underline">
            Warehouse Floor Care
          </a>
          <a href="/services/interior/janitorial/" class="text-primary-600 hover:underline">
            Janitorial Services
          </a>
        </div>
      </div>

      <div class="mt-12 text-gray-600">
        <p>Need immediate assistance?</p>
        <a href="tel:3125225355" class="text-2xl text-primary-600 hover:text-primary-700 font-semibold">
          (312) 522-5355
        </a>
      </div>
    </div>
  </section>
</BaseLayout>