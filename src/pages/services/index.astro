---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Hero from '../../components/Hero.astro';

const allServices = [
  {
    title: "Common Area Cleaning",
    href: "/services/interior/janitorial/",
    description: "Daily/weekly cleaning for lobbies, hallways, elevators, and amenity spaces",
    icon: "🧹"
  },
  {
    title: "Community HVAC Systems",
    href: "/services/interior/",
    description: "Boilers, chillers, rooftop units, and common area climate control",
    icon: "❄️"
  },
  {
    title: "Association Plumbing",
    href: "/services/interior/",
    description: "Water mains, shared stacks, pump rooms, and fixture repairs",
    icon: "🔧"
  },
  {
    title: "Building Electrical Services",
    href: "/services/interior/",
    description: "Panel upgrades, common area lighting, and emergency generators",
    icon: "⚡"
  },
  {
    title: "Snow & Ice Management",
    href: "/services/seasonal/",
    description: "24/7 snow removal for parking lots, sidewalks, and entrances",
    icon: "❄️"
  },
  {
    title: "Grounds Maintenance",
    href: "/services/seasonal/",
    description: "Lawn care, plantings, and landscape maintenance for HOA properties",
    icon: "🌳"
  },
  {
    title: "Association Roofing",
    href: "/services/exterior/",
    description: "Flat roof repairs, replacements, and preventive maintenance programs",
    icon: "🏠"
  },
  {
    title: "Common Area Renovations",
    href: "/services/interior/office-build-outs/",
    description: "Lobby upgrades, clubhouse remodels, and fitness center build-outs",
    icon: "🏢"
  },
  {
    title: "Parking Lot Services",
    href: "/services/exterior/",
    description: "Asphalt repairs, sealcoating, striping, and concrete walkways",
    icon: "🚗"
  },
  {
    title: "Preventive Maintenance",
    href: "/services/maintenance/",
    description: "Scheduled maintenance programs to prevent costly emergency repairs",
    icon: "🔨"
  },
  {
    title: "24/7 Emergency Response",
    href: "/contact/",
    description: "Immediate response for floods, power outages, and building emergencies",
    icon: "🚨"
  },
  {
    title: "Building Washing",
    href: "/services/exterior/",
    description: "Pressure washing for building exteriors, garages, and sidewalks",
    icon: "💦"
  },
  {
    title: "Window Services",
    href: "/services/exterior/",
    description: "Window cleaning and repairs for common areas and building exteriors",
    icon: "🪟"
  },
  {
    title: "Hallway & Lobby Flooring",
    href: "/services/interior/",
    description: "Carpet, tile, and luxury vinyl for common areas and corridors",
    icon: "🏗️"
  },
  {
    title: "Interior & Exterior Painting",
    href: "/services/interior/",
    description: "Hallway refreshes, exterior touch-ups, and full building repaints",
    icon: "🎨"
  },
  {
    title: "Access Control Systems",
    href: "/contact/",
    description: "Key fobs, intercoms, cameras, and garage door systems",
    icon: "🔐"
  },
  {
    title: "Fire & Life Safety",
    href: "/contact/",
    description: "Fire pumps, sprinklers, extinguishers, and annual inspections",
    icon: "🚒"
  },
  {
    title: "Masonry & Tuckpointing",
    href: "/services/exterior/",
    description: "Brick repairs, mortar restoration, and facade maintenance",
    icon: "🧱"
  },
  {
    title: "Building Waterproofing",
    href: "/services/exterior/",
    description: "Foundation sealing, balcony coatings, and leak prevention",
    icon: "💧"
  },
  {
    title: "Elevator Maintenance",
    href: "/contact/",
    description: "Monthly inspections, repairs, and modernization for HOA elevators",
    icon: "🛗"
  }
];

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Building Services",
  "provider": {
    "@type": "Organization",
    "name": "Vector Building Services"
  },
  "areaServed": {
    "@type": "City",
    "name": "Chicago"
  }
};
---

<BaseLayout
  title="All Services - Vector Building Services Chicago"
  description="Complete building services for HOAs and condominiums in Chicago. Janitorial, HVAC, plumbing, electrical, snow removal, landscaping, and more. Call (312) 522-5355."
  schema={schema}
>
  <!-- Hero Section -->
  <Hero
    title="Complete Property Services"
    subtitle="Everything your HOA or condominium needs - from daily cleaning to emergency repairs to major renovations. One trusted partner for all property services."
    image="/images/building lobby.jpg"
    breadcrumbs={[
      { name: "Home", href: "/" },
      { name: "Services" }
    ]}
  />

  <!-- Work Process Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Our Work Process</h2>

      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">📞</span>
          </div>
          <h3 class="font-bold text-xl mb-2">01 Let's Talk Needs</h3>
          <p class="text-gray-600">Boards share what's not working — maintenance gaps, seasonal issues, or long-term concerns. We listen, assess, and outline solutions.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">📝</span>
          </div>
          <h3 class="font-bold text-xl mb-2">02 Plan It Out</h3>
          <p class="text-gray-600">We review property details, prioritize urgent needs, and create a clear service plan so boards and residents know what to expect.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">🛠️</span>
          </div>
          <h3 class="font-bold text-xl mb-2">03 Get to Work</h3>
          <p class="text-gray-600">Our team delivers — whether it's snow removal at 3 a.m., preventive maintenance, or a scheduled project. We work efficiently and keep boards informed.</p>
        </div>

        <div class="text-center">
          <div class="w-20 h-20 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-3xl">✅</span>
          </div>
          <h3 class="font-bold text-xl mb-2">04 Review & Maintain</h3>
          <p class="text-gray-600">The board reviews results, we finalize details, and then keep everything running smoothly with ongoing maintenance and 24/7 support.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- All Services Grid -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">All Services</h2>
        <p class="text-lg text-gray-600 max-w-3xl mx-auto">
          Browse our complete range of property services. Click any service for detailed information and pricing.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
        {allServices.map(service => (
          <a href={service.href} class="block bg-white border border-gray-200 rounded-lg p-6 hover:shadow-xl transition-all hover:-translate-y-1">
            <div class="text-3xl mb-3">{service.icon}</div>
            <h3 class="font-bold text-lg mb-2 text-gray-900">{service.title}</h3>
            <p class="text-gray-600 text-sm">{service.description}</p>
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Why Choose Vector -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold mb-12 text-center">Why Chicago HOAs Choose Vector</h2>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">🏆</span>
          </div>
          <h3 class="font-bold text-xl mb-2">One Trusted Partner</h3>
          <p class="text-gray-600">No more juggling multiple vendors. We handle everything from janitorial to major construction.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">⚡</span>
          </div>
          <h3 class="font-bold text-xl mb-2">24/7 Availability</h3>
          <p class="text-gray-600">Emergency repairs, snow removal, and urgent issues handled round the clock.</p>
        </div>

        <div class="text-center">
          <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <span class="text-2xl text-white">✅</span>
          </div>
          <h3 class="font-bold text-xl mb-2">Licensed & Insured</h3>
          <p class="text-gray-600">Fully licensed contractors with comprehensive insurance protecting your property.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas -->
  <section class="py-16">
    <div class="container mx-auto px-4">
      <div class="text-center">
        <h2 class="text-3xl font-bold mb-8">Serving Chicago & North Shore</h2>
        <p class="text-lg text-gray-600 mb-8">
          Professional property services throughout Chicagoland
        </p>
        <div class="flex flex-wrap gap-4 justify-center">
          <a href="/locations/chicago/" class="bg-blue-100 hover:bg-blue-200 px-6 py-3 rounded-lg font-medium transition">
            Chicago Neighborhoods
          </a>
          <a href="/locations/suburbs/" class="bg-blue-100 hover:bg-blue-200 px-6 py-3 rounded-lg font-medium transition">
            North Shore Suburbs
          </a>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16 bg-blue-900 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Simplify Your Property Management?</h2>
      <p class="text-xl mb-8 max-w-3xl mx-auto">
        Get a free consultation and customized service plan for your HOA or condominium.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="bg-white text-blue-900 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100">
          Get Free Quote
        </a>
        <a href="tel:3125225355" class="border-2 border-white px-8 py-3 rounded-lg font-semibold hover:bg-white/10">
          (312) 522-5355
        </a>
      </div>
    </div>
  </section>

  <!-- Related Links -->
  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto">
        <h3 class="text-xl font-bold mb-4">Explore Our Services</h3>
        <div class="flex flex-wrap gap-4">
          <a href="/services/interior/" class="text-primary-600 hover:underline">Interior Services</a>
          <span class="text-gray-400">•</span>
          <a href="/services/exterior/" class="text-primary-600 hover:underline">Exterior Services</a>
          <span class="text-gray-400">•</span>
          <a href="/services/seasonal/" class="text-primary-600 hover:underline">Seasonal Services</a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>