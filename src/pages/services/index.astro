---
import BaseLayout from '../../layouts/BaseLayout.astro';
import servicesData from '../../data/services.json';
---

<BaseLayout
  title="Construction & Building Services Chicago | Vector Building Services"
  description="Complete construction, renovation, and maintenance services for Chicago commercial properties. Interior build-outs, exterior work, emergency repairs. Call (312) 522-5355."
>
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
    <div class="container mx-auto px-4">
      <nav class="text-sm mb-4">
        <a href="/" class="hover:underline">Home</a>
        <span class="mx-2">/</span>
        <span>Services</span>
      </nav>

      <h1 class="text-4xl md:text-5xl font-bold mb-4">Construction & Building Services</h1>
      <p class="text-xl text-blue-100">Complete solutions for Chicago commercial properties</p>
    </div>
  </section>

  <section class="py-16">
    <div class="container mx-auto px-4">
      <!-- Interior Services -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8">
          <a href="/services/interior/" class="hover:text-primary-600">Interior Services</a>
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {servicesData.interior.map(service => (
            <a href={`/services/interior/${service.slug}/`} class="group bg-white border border-gray-200 rounded-lg p-6 hover:shadow-xl transition-all">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600">{service.name}</h3>
              <p class="text-gray-600 mb-4">{service.shortDescription}</p>
              <div class="text-primary-600 font-semibold flex items-center">
                Learn More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Exterior Services -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8">
          <a href="/services/exterior/" class="hover:text-primary-600">Exterior Services</a>
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {servicesData.exterior.map(service => (
            <a href={`/services/exterior/${service.slug}/`} class="group bg-white border border-gray-200 rounded-lg p-6 hover:shadow-xl transition-all">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600">{service.name}</h3>
              <p class="text-gray-600 mb-4">{service.shortDescription}</p>
              <div class="text-primary-600 font-semibold flex items-center">
                Learn More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Maintenance Plans -->
      <div class="mb-16">
        <h2 class="text-3xl font-bold mb-8">
          <a href="/services/maintenance/" class="hover:text-primary-600">Maintenance Plans</a>
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {servicesData.maintenance.map(service => (
            <a href={`/services/maintenance/${service.slug}/`} class="group bg-white border border-gray-200 rounded-lg p-6 hover:shadow-xl transition-all">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600">{service.name}</h3>
              <p class="text-gray-600 mb-4">{service.shortDescription}</p>
              <div class="text-primary-600 font-semibold flex items-center">
                Learn More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Specialty Services -->
      <div>
        <h2 class="text-3xl font-bold mb-8">
          <a href="/services/specialty/" class="hover:text-primary-600">Specialty & Compliance</a>
        </h2>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {servicesData.specialty.map(service => (
            <a href={`/services/specialty/${service.slug}/`} class="group bg-white border border-gray-200 rounded-lg p-6 hover:shadow-xl transition-all">
              <h3 class="text-xl font-semibold mb-2 group-hover:text-primary-600">{service.name}</h3>
              <p class="text-gray-600 mb-4">{service.shortDescription}</p>
              <div class="text-primary-600 font-semibold flex items-center">
                Learn More
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-2 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
                </svg>
              </div>
            </a>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="bg-gray-100 py-16">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4">Ready to Start Your Project?</h2>
      <p class="text-xl text-gray-600 mb-8">Get a free consultation and quote for your building needs</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700">
          Get Free Quote
        </a>
        <a href="tel:3125225355" class="border-2 border-primary-600 text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50">
          Call: (312) 522-5355
        </a>
      </div>
    </div>
  </section>
</BaseLayout>