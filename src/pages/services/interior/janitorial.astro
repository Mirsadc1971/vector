---
import BaseLayout from '../../../layouts/BaseLayout.astro';
import servicesData from '../../../data/services.json';

const service = servicesData.interior.find(s => s.id === 'janitorial');

const schema = {
  "@context": "https://schema.org",
  "@type": "Service",
  "name": "Janitorial Services Chicago",
  "description": service?.description,
  "provider": {
    "@type": "LocalBusiness",
    "name": "Vector Building Services",
    "telephone": "+13125225355"
  },
  "areaServed": ["Chicago", "Cook County", "DuPage County", "Lake County"],
  "hasOfferCatalog": {
    "@type": "OfferCatalog",
    "name": "Janitorial Service Features",
    "itemListElement": service?.features.map((feature, index) => ({
      "@type": "Offer",
      "itemOffered": {
        "@type": "Service",
        "name": feature
      }
    }))
  }
};
---

<BaseLayout
  title="Janitorial Services Chicago - Commercial Cleaning"
  description="Professional janitorial services in Chicago and suburbs. Daily office cleaning, restroom maintenance, and specialized protocols. Call (312) 522-5355."
  canonical="https://vectorbuildingservices.com/services/interior/janitorial/"
  schema={schema}
>
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-12">
    <div class="container mx-auto px-4">
      <nav class="text-sm mb-4">
        <a href="/" class="hover:underline">Home</a>
        <span class="mx-2">/</span>
        <a href="/services/" class="hover:underline">Services</a>
        <span class="mx-2">/</span>
        <a href="/services/interior/" class="hover:underline">Interior Services</a>
        <span class="mx-2">/</span>
        <span>Janitorial</span>
      </nav>

      <h1 class="text-4xl md:text-5xl font-bold mb-4">{service?.name}</h1>
      <p class="text-xl text-blue-100">{service?.description}</p>
    </div>
  </section>

  <section class="py-12">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        <div class="md:col-span-2">
          <h2 class="text-3xl font-bold mb-6">Professional Janitorial Services for Chicago Businesses</h2>

          <p class="text-lg text-gray-700 mb-6">
            Vector Building Services provides comprehensive janitorial solutions for commercial properties throughout Chicago and the surrounding suburbs. Our experienced team delivers consistent, high-quality cleaning services tailored to your facility's specific needs.
          </p>

          <h3 class="text-2xl font-semibold mb-4">Our Janitorial Services Include:</h3>
          <ul class="space-y-3 mb-8">
            {service?.features.map(feature => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mt-1 mr-3 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-gray-700">{feature}</span>
              </li>
            ))}
          </ul>

          <h3 class="text-2xl font-semibold mb-4">Industries We Serve</h3>
          <div class="grid md:grid-cols-2 gap-4 mb-8">
            <ul class="space-y-2">
              <li class="text-gray-700">• Office Buildings</li>
              <li class="text-gray-700">• Medical Facilities</li>
              <li class="text-gray-700">• Educational Institutions</li>
              <li class="text-gray-700">• Retail Spaces</li>
            </ul>
            <ul class="space-y-2">
              <li class="text-gray-700">• Industrial Facilities</li>
              <li class="text-gray-700">• Government Buildings</li>
              <li class="text-gray-700">• Financial Institutions</li>
              <li class="text-gray-700">• Property Management</li>
            </ul>
          </div>

          <h3 class="text-2xl font-semibold mb-4">Why Choose Vector Building Services?</h3>
          <div class="bg-gray-50 p-6 rounded-lg mb-8">
            <ul class="space-y-3">
              <li class="flex items-start">
                <span class="font-semibold mr-2">Experienced Team:</span>
                <span class="text-gray-700">Trained and certified cleaning professionals</span>
              </li>
              <li class="flex items-start">
                <span class="font-semibold mr-2">Flexible Scheduling:</span>
                <span class="text-gray-700">Services available 24/7 to minimize business disruption</span>
              </li>
              <li class="flex items-start">
                <span class="font-semibold mr-2">Green Cleaning:</span>
                <span class="text-gray-700">Eco-friendly products and sustainable practices</span>
              </li>
              <li class="flex items-start">
                <span class="font-semibold mr-2">Quality Assurance:</span>
                <span class="text-gray-700">Regular inspections and customer feedback systems</span>
              </li>
            </ul>
          </div>

          <h3 class="text-2xl font-semibold mb-4">Service Areas</h3>
          <p class="text-gray-700 mb-4">We provide janitorial services throughout Chicago and suburbs including:</p>
          <div class="grid grid-cols-2 md:grid-cols-3 gap-2 mb-8">
            <a href="/locations/chicago/loop/janitorial/" class="text-primary-600 hover:underline">The Loop</a>
            <a href="/locations/chicago/river-north/janitorial/" class="text-primary-600 hover:underline">River North</a>
            <a href="/locations/suburbs/glenview/janitorial/" class="text-primary-600 hover:underline">Glenview</a>
            <a href="/locations/suburbs/northbrook/janitorial/" class="text-primary-600 hover:underline">Northbrook</a>
            <a href="/locations/suburbs/skokie/janitorial/" class="text-primary-600 hover:underline">Skokie</a>
            <a href="/locations/suburbs/naperville/janitorial/" class="text-primary-600 hover:underline">Naperville</a>
          </div>
        </div>

        <div>
          <div class="bg-primary-50 border border-primary-200 rounded-lg p-6 mb-6 sticky top-24">
            <h3 class="text-xl font-semibold mb-4">Get a Free Quote</h3>
            <p class="text-gray-700 mb-4">Professional janitorial services customized for your facility</p>
            <a href="/contact/" class="bg-primary-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-primary-700 block text-center mb-3">
              Request Quote
            </a>
            <a href="tel:3125225355" class="border-2 border-primary-600 text-primary-600 px-6 py-3 rounded-lg font-semibold hover:bg-primary-50 block text-center">
              (312) 522-5355
            </a>
          </div>

          <div class="bg-white border border-gray-200 rounded-lg p-6">
            <h4 class="font-semibold mb-3">Related Services</h4>
            <ul class="space-y-2">
              <li><a href="/services/interior/floor-care/" class="text-primary-600 hover:underline">Floor Care & Maintenance</a></li>
              <li><a href="/services/interior/porter/" class="text-primary-600 hover:underline">Day Porter Services</a></li>
              <li><a href="/services/interior/disinfection/" class="text-primary-600 hover:underline">Disinfection Services</a></li>
              <li><a href="/services/exterior/window-cleaning/" class="text-primary-600 hover:underline">Window Cleaning</a></li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section class="bg-gray-50 py-12">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl font-bold text-center mb-8">Ready to Get Started?</h2>
      <p class="text-center text-lg text-gray-700 mb-8">
        Join hundreds of satisfied businesses throughout Chicago who trust Vector Building Services for their janitorial needs.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/contact/" class="bg-primary-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-primary-700 text-center">
          Get Free Quote
        </a>
        <a href="tel:3125225355" class="border-2 border-primary-600 text-primary-600 px-8 py-3 rounded-lg font-semibold hover:bg-primary-50 text-center">
          Call: (312) 522-5355
        </a>
      </div>
    </div>
  </section>
</BaseLayout>