            <a href="lincolnshire" class="group bg-white border-2 border-gray-200 p-5 rounded-lg hover:shadow-xl hover:border-primary-400 transition-all">
              <h4 class="font-bold text-lg text-gray-900 group-hover:text-primary-600 mb-2">Lincolnshire</h4>
              <p class="text-gray-600 text-sm">Residential HOA solutions</p>
            </a>
          </div>
        </div>

        <!-- Farther Suburbs (4 cards) - centered -->
        <div class="mb-12">
          <h3 class="text-2xl font-bold mb-6 text-primary-600">Farther Suburbs</h3>
          <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-4">
            <a href="libertyville" class="group bg-white border-2 border-gray-200 p-5 rounded-lg hover:shadow-xl hover:border-primary-400 transition-all">
              <h4 class="font-bold text-lg text-gray-900 group-hover:text-primary-600 mb-2">Libertyville</h4>
              <p class="text-gray-600 text-sm">Growing community services</p>
            </a>
            <a href="vernon-hills" class="group bg-white border-2 border-gray-200 p-5 rounded-lg hover:shadow-xl hover:border-primary-400 transition-all">
              <h4 class="font-bold text-lg text-gray-900 group-hover:text-primary-600 mb-2">Vernon Hills</h4>
              <p class="text-gray-600 text-sm">Comprehensive property care</p>
            </a>
            <a href="lake-zurich" class="group bg-white border-2 border-gray-200 p-5 rounded-lg hover:shadow-xl hover:border-primary-400 transition-all">
